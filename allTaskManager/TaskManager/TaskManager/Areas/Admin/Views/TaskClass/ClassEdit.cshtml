@using TaskManager.Model;
@{
    Layout = null;
    T_Base_Class item = ViewBag.item;

}


<div class="pageContent">
    <form method="post" action="/Admin/TaskClass/EditSave" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <input name="Id" value="@item.Id" type="hidden" />
            <p>
                <label>班级：</label>
                <input name="Name" type="text" size="30" value="@item.Name" />
            </p>
            
            <p>
                <label>班主任姓名：</label>

                <input name="Teacher.Id" type="hidden" suggesturl="/Admin/TaskClass/GetAllTeacher" lookupgroup="Teacher" value="@item.TeaId">
                <input class="required" name="Teacher.Name" id="Teacher.Id" type="text" postfield="keyword" suggestfields="Name,Id" suggesturl="/Admin/TaskClass/GetAllTeacher" lookupgroup="Teacher" size="30" value="@item.Teacher.Name">

            </p>
        </div>
        <div class="formBar">
            <ul>
                <!--<li><a class="buttonActive" href="javascript:;"><span>保存</span></a></li>-->
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>

