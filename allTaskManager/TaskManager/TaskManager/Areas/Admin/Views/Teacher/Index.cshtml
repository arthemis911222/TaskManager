@using TaskManager.Model;
@{
    Layout = null;
    List<T_Base_Teacher> lst = ViewBag.lst;

    int pageSize = ViewBag.pageSize;
}

<form id="pagerForm" method="post" action="/Admin/Teacher/Index">
    <input type="hidden" name="status" value="${param.status}">
    <input type="hidden" name="keywords" value="${param.keywords}" />
    <input type="hidden" name="pageNum" value="1" />
    <input type="hidden" name="numPerPage" value="${model.numPerPage}" />
    <input type="hidden" name="orderField" value="${param.orderField}" />
</form>

<div class="pageHeader">
    <form onsubmit="return navTabSearch(this);" action="/Admin/Teacher/Index" method="post">
        <div class="searchBar">
            <!--<ul class="searchContent">
                <li>
                    <label>我的客户：</label>
                    <input type="text"/>
                </li>
                <li>
                <select class="combox" name="province">
                    <option value="">所有省市</option>
                    <option value="北京">北京</option>
                    <option value="上海">上海</option>
                    <option value="天津">天津</option>
                    <option value="重庆">重庆</option>
                    <option value="广东">广东</option>
                </select>
                </li>
            </ul>
            -->
            <table class="searchContent">
                <tr>
                    <td>
                        姓名：<input type="text" name="keyword" />
                    </td>
                </tr>
            </table>
            <div class="subBar">
                <ul>
                    <li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>

                </ul>
            </div>
        </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li><a class="add" href="/Admin/Teacher/Add" target="navTab"><span>添加</span></a></li>
            @*<li><a class="delete" href="/Teacher/Delete?id={TeacherId}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>*@
            <li class="">
                <a title="确实要删除这些记录吗?" target="selectedTodo" rel="ids" href="/Admin/Teacher/Delete" class="delete">
                    <span>删除</span>
                </a>
            </li>

        </ul>
    </div>
    <table class="table" width="100%" layoutH="138">
        <thead>
            <tr>
                <th style="width: 18px; cursor: default;" class="">
                    <div class="gridCol" title="">
                        <input type="checkbox" group="ids" class="checkboxCtrl">
                    </div>

                <th width="120">编号</th>
                <th width="120">工号</th>
                <th width="120">姓名</th>
                <th width="80">性别</th>
                <th width="150">联系方式</th>
                <th width="80" align="center">是否班主任</th>
                <th style="width: 100px;">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (T_Base_Teacher item in lst)
            {
                <tr target="Id" rel="@item.Id">
                    <td style="width: 18px;">
                        <div>
                            <input name="ids" value="@item.Id" type="checkbox">
                        </div>
                    </td>
                    <td>@item.Id</td>
                    <td>@item.TeaId</td>
                    <td>@item.Name</td>
                    @{
                        if (item.Sex == 1)
                        {
                            <td>女</td>
                        }

                        else
                        {
                            <td>男</td>
                        }

                    }
                    <td>@item.Phone</td>
                    @{
                        if (item.IsBZR == 1)
                        {
                            <td>是</td>
                        }
                        else
                        {
                            <td>否</td>
                        }
                    }
                    
                    <td>
                        <a title="编辑" target="navTab" href="/Admin/Teacher/TeacherEdit?id=@item.Id" class="btnEdit">编辑</a>
                        <a title="重置密码" target="ajaxTodo" href="/Admin//Teacher/ReSet?id=@item.Id" class="btnReset">重置密码</a>
                        <a title="删除" target="ajaxTodo" href="/Admin/Teacher/Delete?ids=@item.Id" class="btnDel">删除</a>
                    </td>
                </tr>
                        }
        </tbody>
    </table>
    <div class="panelBar">
        <div class="pages">
            <span>显示</span>
            <select id="pageSize" class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value})">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <span>条，共 @ViewBag.recordCount 条</span>
        </div>
        <div class="pagination" targetType="navTab" totalCount="@ViewBag.recordCount" numPerPage="@ViewBag.pageSize" pageNumShown="5" currentPage="@ViewBag.pageIndex"></div>
    </div>
</div>

<script>
    var size = @pageSize;
    $("#pageSize option").each(function(){
        if($(this).val()== size) {
            $(this).attr("selected",true);
        }
    });
</script>
